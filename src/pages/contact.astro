---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-base-100 to-base-200">
    <!-- Hero Section -->
    <div class="hero min-h-[40vh] bg-gradient-to-r from-primary/10 to-secondary/10">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h1 class="text-5xl font-bold text-base-content mb-6">
            📞 Contacte-nos
          </h1>
          <p class="text-xl text-base-content/80">
            Entre em contacto connosco para parcerias, doações ou mais informações sobre o projeto
          </p>
        </div>
      </div>
    </div>

    <!-- Contact Information Section -->
    <div class="container mx-auto px-4 py-16">
      <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        
        <!-- Contact Details -->
        <div class="space-y-8">
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h2 class="card-title text-2xl mb-6 flex items-center">
                🏢 Igreja Baptista de Leiria
              </h2>
              
              <div class="space-y-6">
                <!-- Address -->
                <div class="flex items-start space-x-4">
                  <div class="text-2xl">📍</div>
                  <div>
                    <h3 class="font-semibold">Morada</h3>
                    <p class="text-base-content/70">
                      Rua da Igreja, 123<br>
                      2400-000 Leiria<br>
                      Portugal
                    </p>
                  </div>
                </div>
                
                <!-- Phone -->
                <div class="flex items-center space-x-4">
                  <div class="text-2xl">📞</div>
                  <div>
                    <h3 class="font-semibold">Telefone</h3>
                    <p class="text-base-content/70">+351 244 123 456</p>
                  </div>
                </div>
                
                <!-- Email -->
                <div class="flex items-center space-x-4">
                  <div class="text-2xl">✉️</div>
                  <div>
                    <h3 class="font-semibold">Email Geral</h3>
                    <p class="text-base-content/70">geral@betel.org</p>
                  </div>
                </div>
                
                <!-- Website -->
                <div class="flex items-center space-x-4">
                  <div class="text-2xl">🌐</div>
                  <div>
                    <h3 class="font-semibold">Website</h3>
                    <p class="text-base-content/70">www.betel.org</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Project Specific Contacts -->
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h2 class="card-title text-2xl mb-6 flex items-center">
                🏠 Centro de Acolhimento Betel
              </h2>
              
              <div class="space-y-6">
                <!-- Project Coordinator -->
                <div class="flex items-center space-x-4">
                  <div class="text-2xl">👨‍💼</div>
                  <div>
                    <h3 class="font-semibold">Coordenador do Projeto</h3>
                    <p class="text-base-content/70">Pastor João Silva</p>
                    <p class="text-sm text-base-content/60">projeto@betel.org</p>
                  </div>
                </div>
                
                <!-- Financial Contact -->
                <div class="flex items-center space-x-4">
                  <div class="text-2xl">💰</div>
                  <div>
                    <h3 class="font-semibold">Contabilidade</h3>
                    <p class="text-base-content/70">Maria Santos</p>
                    <p class="text-sm text-base-content/60">contabilidade@betel.org</p>
                  </div>
                </div>
                
                <!-- Partnerships -->
                <div class="flex items-center space-x-4">
                  <div class="text-2xl">🤝</div>
                  <div>
                    <h3 class="font-semibold">Parcerias</h3>
                    <p class="text-base-content/70">Ana Costa</p>
                    <p class="text-sm text-base-content/60">parcerias@betel.org</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-2xl mb-6 flex items-center">
              📝 Envie-nos uma Mensagem
            </h2>
            
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-4">
                <div class="form-control">
                  <label class="label">
                    <span class="label-text">Nome *</span>
                  </label>
                  <input type="text" placeholder="Seu nome completo" class="input input-bordered" required />
                </div>
                
                <div class="form-control">
                  <label class="label">
                    <span class="label-text">Email *</span>
                  </label>
                  <input type="email" placeholder="seu@email.com" class="input input-bordered" required />
                </div>
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text">Telefone</span>
                </label>
                <input type="tel" placeholder="+351 244 123 456" class="input input-bordered" />
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text">Assunto *</span>
                </label>
                <select class="select select-bordered" required>
                  <option value="">Selecione um assunto</option>
                  <option value="doacao">Doação</option>
                  <option value="parceria">Parceria Empresarial</option>
                  <option value="voluntariado">Voluntariado</option>
                  <option value="informacao">Informação Geral</option>
                  <option value="outro">Outro</option>
                </select>
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text">Mensagem *</span>
                </label>
                <textarea class="textarea textarea-bordered h-32" placeholder="Escreva a sua mensagem aqui..." required></textarea>
              </div>
              
              <div class="form-control">
                <label class="label cursor-pointer">
                  <span class="label-text">Aceito receber informações sobre o projeto</span> 
                  <input type="checkbox" class="checkbox checkbox-primary" />
                </label>
              </div>
              
              <div class="form-control mt-6">
                <button class="btn btn-primary btn-lg">
                  📤 Enviar Mensagem
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Additional Information -->
      <div class="max-w-4xl mx-auto mt-16">
        <div class="grid md:grid-cols-3 gap-8">
          
          <!-- Office Hours -->
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body text-center">
              <div class="text-4xl mb-4">🕒</div>
              <h3 class="card-title justify-center">Horário de Funcionamento</h3>
              <div class="space-y-2 text-sm">
                <p><strong>Segunda a Sexta:</strong> 9h - 18h</p>
                <p><strong>Sábado:</strong> 9h - 12h</p>
                <p><strong>Domingo:</strong> Fechado</p>
              </div>
            </div>
          </div>
          
          <!-- Emergency Contact -->
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body text-center">
              <div class="text-4xl mb-4">🚨</div>
              <h3 class="card-title justify-center">Contacto de Emergência</h3>
              <p class="text-sm">Para situações urgentes relacionadas com o projeto:</p>
              <p class="font-semibold text-primary">+351 244 123 456</p>
            </div>
          </div>
          
          <!-- Social Media -->
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body text-center">
              <div class="text-4xl mb-4">📱</div>
              <h3 class="card-title justify-center">Redes Sociais</h3>
              <div class="space-y-2">
                <a href="#" class="btn btn-outline btn-sm w-full">📘 Facebook</a>
                <a href="#" class="btn btn-outline btn-sm w-full">📷 Instagram</a>
                <a href="#" class="btn btn-outline btn-sm w-full">🐦 Twitter</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Map Section -->
      <div class="max-w-4xl mx-auto mt-16">
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-2xl mb-6">🗺️ Localização</h3>
            <div class="bg-base-200 rounded-lg h-64 flex items-center justify-center">
              <div class="text-center">
                <div class="text-6xl mb-4">🗺️</div>
                <p class="text-base-content/70">Mapa interativo será adicionado aqui</p>
                <p class="text-sm text-base-content/60">Rua da Igreja, 123, Leiria, Portugal</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout> 